<!DOCTYPE html>
<html>
<head>
  <title>Library List</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
<h2>Library Books</h2>

<form method="get" action="/books/list">
  <label>Sort by:
    <select name="sort">
      <option value="">None</option>
      <option value="title" <%= sort === 'title' ? 'selected' : '' %>>Title</option>
      <option value="author" <%= sort === 'author' ? 'selected' : '' %>>Author</option>
    </select>
  </label> <br>
  <label>
    Available only: 
    <input type="checkbox" name="availableOnly" value="true" <%= availableOnly === 'true' ? 'checked' : '' %> />
  </label> <br>
  <button type="submit">Filter</button>
</form>

<% books.forEach(book => { %>
  <div class="book">
    <h3><%= book.title %></h3>
    <p>Authors: <%= (book.authors && book.authors.length > 0) ? book.authors.join(', ') : 'Unknown' %></p>
    <p><% if (book.thumbnail) { %>
        <img src="<%= book.thumbnail %>" alt="Book cover">
      <% } %></p>
    <p>Available: <%= book.availableCopies %> / <%= book.totalCopies %></p>
  </div>
  <hr>
<% }) %>
<a href="/"> Home</a>
</body>
</html>