<!DOCTYPE html>
<html>
<head>
  <title>Library List</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
<h2>Library Books</h2>

<% books.forEach(book => { %>
  <div class="book">
    <h3><%= book.title %></h3>
    <p>Authors: <%= (book.authors && book.authors.length > 0) ? book.authors.join(', ') : 'Unknown' %></p>
    <p><% if (book.thumbnail) { %>
        <img src="<%= book.thumbnail %>" alt="Book cover">
      <% } %></p>
    <p>Available: <%= book.availableCopies %> / <%= book.totalCopies %></p>
  </div>
  <hr>
<% }) %>
<a href="/"> Home</a>
</body>
</html>